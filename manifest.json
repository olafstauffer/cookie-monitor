{
	"manifest_version":	2,

	"name":	"Cookie Monitor",
	"version":	"0.1",

	"description":	"Display updates to cookies on the page. TODO",
	"update_url": "http://localhost/TODO",
	"icons": {
		"128": "icon128x128.png"
	},

	"background":	{
		"scripts": ["js/background.js"],
		"persistent": true
	},

	"browser_action": {
		"default_icon": "icon128x128.png",
		"default_title": "Cookie Monitor",
		"default_popup": "popup.html"
	},

	"permissions":	["tabs", "cookies", "*://*/*"]
}
