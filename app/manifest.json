{
    "name": "Cookie Monitor",
    "version": "0.5.1",
    "manifest_version": 2,
    "description": "Display and analyse every single cookie event.",
    "icons": {
        "128": "images/icon128x128.png"
    },
    "background": {
        "scripts": [
            "scripts/background.js",
            "scripts/cookie-event.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "images/icon128x128.png",
        "default_title": "Cookie Monitor",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "cookies",
        "*://*/*"
    ]
}